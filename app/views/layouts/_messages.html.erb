
        <% flash.each do |name, msg| %>
          <div class="ui two column centered grid">
            <div class="column">
               <div class="ui <%="#{name}"%> message transition">
                <i class="close icon"></i>
                <div class="header">
                  <%= msg %>
                </div>
              </div>
            </div>
          </div>

          <% end %>
